---
import Menu from '../components/Menu.astro'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<Menu></Menu>
		<slot />
	</body>
</html>
<style is:global>
	@font-face {
		font-family: prociono;
		src: url(/prociono-regular-webfont.woff);
	}
	:root {
	}
	html {
		font-family: Prociono, system-ui, sans-serif;
		font-size: 20px;
		line-height: 1.5;
		/* background: #f3e7e7; */
		max-width: 41rem;
	}
	a {
		color: black;
	}
	body {
		margin: 2rem;
	}
	nav {
		margin-bottom: 3rem;
	}
	h1 {
		font-size: 3rem;
	}
	strong,
	em {
		font-family: system-ui, sans-serif;
		font-weight: bold;
		font-style: normal;
		text-transform: uppercase;
	}
	ul {
		list-style: none;
		font-size: 18px;
		padding-left: 1rem;
	}
	.Figma {
		position: relative;
		height: 50vh;
		border: 1px solid red;
		overflow: hidden;
	}
	.Figma iframe {
    border: 0;
    position: absolute;
    max-width: none;
    left: -25%;
    top: -25%;
    width: 150%;
    height: 150%;
}
</style>
